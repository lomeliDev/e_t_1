{
  "name": "atm-machine",
  "version": "1.0.2",
  "description": "ATM-Machine",
  "main": "main.js",
  "homepage": "./",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/lomeliDev/e_t_1.git"
  },
  "scripts": {
    "start": "electron . --kiosk=0",
    "watch": "webpack --config webpack.common.js --watch",
    "sass": "node-sass --watch ./src/assets/scss/main.scss ./src/assets/css/main.css --source-map ./src/assets/css/main.css.map",
    "electron-rebuild-native": "./node_modules/.bin/electron-rebuild",
    "electron-rebuild-sass": "./node_modules/.bin/electron-rebuild --exclude node-sass",
    "build": "webpack --config webpack.prod.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac",
    "make:win": "electron-builder --win --x64",
    "deploy:win": "electron-builder build --win --x64 --publish always"
  },
  "keywords": [],
  "author": "miguel@lomeli.io",
  "license": "MIT",
  "build": {
    "productName": "ATM-Machine",
    "appId": "com.atm-machine.atm",
    "buildDependenciesFromSource": false,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "preloads/**/*",
      "www/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/react_app_logo.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 430,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/images/react_app_logo.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "dotenv-webpack": "^7.0.3",
    "electron": "^13.1.9",
    "electron-builder": "^22.11.7",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^3.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "webpack-merge": "^5.1.4"
  },
  "dependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "aes-js": "^3.1.2",
    "babel-loader": "^8.2.2",
    "electron-log": "^4.4.1",
    "electron-settings": "^4.0.2",
    "electron-shutdown-command": "^2.0.1",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux-thunk": "^2.3.0",
    "serialport": "9.2.0",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2"
  }
}
